{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/acceptRequest/**",
        "function": "acceptRequest"
      }
    ]
  },
  "functions": {
    "predeploy": "npm --prefix functions run prepublish"
  }
}
