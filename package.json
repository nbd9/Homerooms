{
  "name": "homeroom",
  "version": "1.0.0",
  "private": true,
  "description": "LOHS App to digitize Support Seminar",
  "author": {
    "name": "Nick DeGroot",
    "email": "contact@nbdeg.com",
    "url": "http://nbdeg.com"
  },
  "bugs": {
    "url": "https://github.com/nbd9/SupportSeminar/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nbd9/SupportSeminar.git"
  },
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "ios": "react-native run-ios --simulator=\"iPhone X\" && yarn start",
    "android": "~/Library/Android/sdk/tools/emulator -avd Nexus_5X_API_26 -netdelay none -netspeed full & react-native run-android",
    "test": "jest",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && yarn cache clean --force",
    "clean:android": "cd android/ && ./gradlew clean && cd .. && react-native run-android",
    "newclear": "rm -rf $TMPDIR/react-* && watchman watch-del-all && rm -rf ios/build && rm -rf node_modules/ && yarn cache clean --force && yarn",
    "test:watch": "jest --watch",
    "updateSnapshot": "jest --updateSnapshot",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "android:build": "cd android && ./gradlew assembleRelease",
    "android:install": "cd android && ./gradlew assembleRelease && ./gradlew installRelease",
    "android:hockeyapp": "cd android && ./gradlew assembleRelease && puck -submit=auto app/build/outputs/apk/app-release.apk",
    "android:devices": "$ANDROID_HOME/platform-tools/adb devices",
    "android:logcat": "$ANDROID_HOME/platform-tools/adb logcat *:S ReactNative:V ReactNativeJS:V",
    "android:shake": "$ANDROID_HOME/platform-tools/adb devices | grep '\\t' | awk '{print $1}' | sed 's/\\s//g' | xargs -I {} $ANDROID_HOME/platform-tools/adb -s {} shell input keyevent 82",
    "lint": "standard --verbose | snazzy",
    "lintdiff": "git diff --name-only --cached --relative | grep '\\.js$' | xargs standard | snazzy",
    "fixcode": "standard --fix",
    "git-hook": "yarn run lint -s && yarn run test -s",
    "flow": "flow"
  },
  "rnpm": {
    "assets": [
      "./App/Assets/Fonts"
    ]
  },
  "dependencies": {
    "apisauce": "^0.14.0",
    "format-json": "^1.0.3",
    "lodash": "^4.17.2",
    "lodash.filter": "^4.6.0",
    "luxon": "^0.2.12",
    "prop-types": "^15.5.10",
    "querystringify": "1.0.0",
    "ramda": "^0.25.0",
    "react": "16.2.0",
    "react-native": "0.51.0",
    "react-native-animatable": "^1.2.4",
    "react-native-code-push": "^5.2.0-beta",
    "react-native-device-info": "^0.13.0",
    "react-native-drawer": "^2.3.0",
    "react-native-elements": "^0.18.2",
    "react-native-firebase": "^3.0.5",
    "react-native-mail": "^3.0.5",
    "react-native-material-bottom-navigation": "^0.7.0",
    "react-native-vector-icons": "oblador/react-native-vector-icons",
    "react-native-video": "^2.0.0",
    "react-navigation": "^1.0.0-beta.23",
    "react-redux": "^5.0.2",
    "react-redux-firebase": "^2.0.0",
    "redux": "^3.6.0",
    "redux-persist": "^5.4.0",
    "redux-saga": "^0.16.0",
    "reduxsauce": "0.7.0",
    "seamless-immutable": "^7.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "babel-jest": "22.0.4",
    "babel-plugin-ignite-ignore-reactotron": "^0.3.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-native": "4.0.0",
    "enzyme": "^3.2.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "0.62.0",
    "husky": "^0.14.3",
    "ignite-animatable": "^1.0.0",
    "ignite-ir-boilerplate": "^2.2.2",
    "ignite-standard": "^1.0.0",
    "ignite-vector-icons": "^1.1.0",
    "jest": "22.0.4",
    "mockery": "^2.0.0",
    "react-addons-test-utils": "~15.6.2",
    "react-dom": "16.2.0",
    "react-test-renderer": "16.2.0",
    "reactotron-react-native": "^1.12.0",
    "reactotron-redux": "^1.11.1",
    "reactotron-redux-saga": "^1.11.1",
    "snazzy": "^7.0.0",
    "standard": "10.0.3"
  },
  "jest": {
    "testMatch": [
      "**/Tests/**/*.js",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "react-native"
  },
  "standard": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "ignore": [
      "node_modules",
      "flow-typed"
    ],
    "globals": [
      "describe",
      "test",
      "jest",
      "expect",
      "fetch",
      "navigator",
      "__DEV__",
      "XMLHttpRequest",
      "FormData",
      "React$Element"
    ]
  }
}
