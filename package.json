{
  "name": "Homeroom",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Nick DeGroot",
    "email": "contact@nbdeg.com",
    "url": "http://nbdeg.com"
  },
  "bugs": {
    "url": "https://github.com/nbd9/Homeroom/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nbd9/Homeroom.git"
  },
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "ios": "react-native run-ios --simulator=\"iPhone X\"",
    "android": "~/Library/Android/sdk/tools/emulator -avd Nexus_5X_API_26 -netdelay none -netspeed full & react-native run-android",
    "newclear": "rm -rf $TMPDIR/react-* && watchman watch-del-all && rm -rf ios/build && rm -rf node_modules/ && yarn cache clean --force && yarn",
    "flow": "flow",
    "lint": "standard --verbose | snazzy",
    "postinstall": "rm ./node_modules/react-native/local-cli/core/__fixtures__/files/package.json"
  },
  "rnpm": {
    "assets": [
      "./App/Assets/Fonts"
    ]
  },
  "dependencies": {
    "lodash.filter": "^4.6.0",
    "luxon": "^0.4.0",
    "react": "16.2.0",
    "react-native": "0.52.2",
    "react-native-calendars": "^1.17.0",
    "react-native-code-push": "^5.2.1",
    "react-native-device-info": "^0.14.0",
    "react-native-elements": "^0.19.0",
    "react-native-firebase": "^3.2.4",
    "react-native-mail": "^3.0.5",
    "react-native-material-bottom-navigation": "^0.7.0",
    "react-native-modal": "^5.0.0",
    "react-native-touch-id": "^4.0.0",
    "react-native-vector-icons": "^4.5.0",
    "react-native-video": "^2.0.0",
    "react-navigation": "^1.0.0-beta.27",
    "react-redux": "^5.0.6",
    "react-redux-firebase": "^2.0.3",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-jest": "22.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-native": "4.0.0",
    "flow-bin": "^0.64.0",
    "jest": "22.1.4",
    "react-test-renderer": "16.2.0",
    "reactotron-react-native": "^1.14.0",
    "reactotron-redux": "^1.13.0",
    "standard": "^10.0.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "node_modules",
      "flow-typed"
    ],
    "globals": [
      "test",
      "jest",
      "expect",
      "fetch",
      "navigator",
      "__DEV__",
      "console.tron"
    ]
  }
